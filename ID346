//NOTE: THIS WORKS. TIME IS 3.83s.
#include <stdlib.h>
#include <iostream>
#include <bits/stdc++.h>
#include <math.h>
using namespace std;
long ans;
void recurse(long int x)
{
    long x1=x/2;
    long x2=x/3;
    long x3=x/4;
    ans+=max(x1+x2+x3,x);
    if(x1>11){recurse(x1);ans-=x1;}
    if(x2>11){recurse(x2);ans-=x2;}
    if(x3>11){recurse(x3);ans-=x3;}
}
int main()
{
   for(int i=1;i<=10;i++)
	{
	    ans=0;
		long int n=-1;
		scanf("%ld",&n);
		if(n>=0)
		{
		    recurse(n);
		    printf("%ld\n",ans);}
		    else break;
     }
}
